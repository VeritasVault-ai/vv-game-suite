{
  "name": "VV Game Suite",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "forwardPorts": [8000, 7071],
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-azurefunctions",
        "ms-python.black-formatter",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "github.copilot",
        "github.copilot-chat",
        "github.monica"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "github.monica.enabled": true,
        "github.monica.features.codeEditing": true,
        "github.monica.features.pullRequests": true,
        "github.monica.authentication.method": "github",
        "github.monica.authentication.tokenStorage": "secureStorage"
      }
    }
  },
  
  // Authentication settings for the container
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  // Setup authentication during container creation
  "postCreateCommand": "./.devcontainer/scripts/setup-monica-auth.sh",
  
  // Forward GitHub credentials from host to container
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ],
  
  // Environment variables for authentication
  "remoteEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
  }
}
